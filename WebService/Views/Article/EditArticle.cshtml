@using Blog.WebService.ViewModels.Article;

@model EditArticleViewModel;

@{
    ViewData["Title"] = "EditArticle";
}

<div class="container form-container px-0">
    <div>
        <h2>Редактирование статьи</h2>
        <hr />
    </div>
    <form method="post" asp-controller="Article" asp-action="Edit">
        <div asp-asp-validation-summary="Model">
            <input type="hidden" asp-for="Id" value="@Model.Id" />
            <input type="hidden" asp-for="UserId" value="@Model.UserId" />
            <div class="col my-3">
                <div class="d-flex flex-row gap-3">
                    @for (var i = 0; i < Model.Tags.Count; i++)
                    {
                        <div>
                            <input id="@Model.Tags[i].Name" class="form-check-input me-1" type="checkbox" asp-for="@Model.Tags[i].Selected" />
                            <label class="@Model.Tags[i].Name" for="firstCheckbox">@Model.Tags[i].Name</label>
                            <input type="hidden" asp-for="@Model.Tags[i].Id" />
                            <input type="hidden" asp-for="@Model.Tags[i].Name" />
                        </div>
                    }
                </div>
            </div>

            <div class="col my-3">
                <label class="px-0" for="NewArticleTitle">Заголовок</label>
                <input id="EditArticleTitle" asp-for="Title" class="form-control" type="text" />
            </div>

            <div class="col my-3">
                <label class="px-0" for="NewArticleContent">Содержание</label>
                <textarea id="EditArticleContent" asp-for="Content" class="form-control" type="text"></textarea>
            </div>

            <div class="col my-3">
                <input class="btn btn-primary" type="submit" value="Сохранить" />
            </div>
        </div>
    </form>

    <div class="container-sm">
        <a class="link-primary" asp-area="" asp-controller="Article" asp-action="Articles">Выйти без сохранения</a>
    </div>
</div>