@using Blog.WebService.ViewModels.Article;
@using Blog.BLL.Interfaces;

@model List<ArticleViewModel>;

@inject IAccountService AccountService;

@{
    ViewData["Title"] = "ArticleList";
    var user = await AccountService.GetAuthAccountAsync(User);
    var userRoles = new List<string>();
    var userArticles = new List<int>();

    if(user != null)
    {
        userRoles = user.Roles.Select(r => r.Name).ToList();
        userArticles = user.Articles.Select(a => a.Id).ToList();
    }
}

<div class="container form-container px-0">
    <div class="col">
        <h2>Все статьи</h2>
        <a asp-area="" asp-controller="Article" asp-action="AddArticle">Добавить статью</a>
        <hr />

        @foreach (var article in Model)
        {
            <div class="card my-3">
                <div class="card-body">
                    <a class="card-title nav-link" asp-area="" asp-controller="Article" asp-action="Article" asp-route-id="@article.Id">@article.Title</a>
                    <div class="d-flex flex-col gap-1 mb-2">
                        @foreach (var tag in article.Tags)
                        {
                            <span class="badge bg-success">@tag.Name</span>
                        }
                    </div>
                    @if (user != null && (userArticles.Contains(article.Id) || userRoles.Contains("Admin") || userRoles.Contains("Moderator")))
                    {
                        <div class="btn-group" role="group" aria-label="Article option buttons">
                            <a type="button" class="btn btn-outline-secondary" asp-area="" asp-controller="Article" asp-action="EditArticle" asp-route-id="@article.Id">Редактировать</a>
                            <form asp-area="" asp-controller="Article" asp-action="DeleteArticle" asp-route-id="@article.Id">
                                <button type="submit" class="btn btn-outline-danger">Удалить</button>
                            </form>
                        </div>
                    }
                </div>
            </div>
        }
    </div>

</div>