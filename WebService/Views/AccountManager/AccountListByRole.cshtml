@using Blog.WebService.ViewModels.Account

@model AccountListByRole;

@{
    ViewData["Title"] = "UserList";
}

<div class="container form-container px-0">
    <div class="col">
        <h2>Пользователи роли "@Model.AccountRole.Name"</h2>
        <h3>колличество пользователей: @Model.Accounts.Count()</h3>
        <h3>@Model.AccountRole.Description</h3>
        <hr />

        @foreach (var user in Model.Accounts)
        {
            <div class="card my-3">
                <div class="card-body">
                    <a class="card-title nav-link" asp-area="" asp-controller="AccountManager" asp-action="UserPage" asp-route-id="@user.Id">@user.Email</a>
                    <div class="d-flex">
                        @foreach (var role in user.Roles)
                        {
                            if (role.Name == "Admin")
                            {
                                <span class="badge bg-danger">@role.Name</span>
                            }
                            else if (role.Name == "Moderator")
                            {
                                <span class="badge bg-warning">@role.Name</span>
                            }
                            else if (role.Name == "Developer")
                            {
                                <span class="badge bg-warning">@role.Name</span>
                            }
                            else
                            {
                                <span class="badge bg-primary">@role.Name</span>
                            }
                        }
                    </div>
                    <p class="card-text text-secondary">@user.Email</p>
                </div>
            </div>
        }
    </div>

</div>