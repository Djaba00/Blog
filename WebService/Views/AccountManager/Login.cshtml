@model Blog.WebService.VIewModels.Account.LoginViewModel;

@{
    ViewData["Title"] = "Login";
}

<div class="container form-container px-0">
    <div>
        <h2>Вход в приложение</h2>
        <hr />
    </div>
    <form method="post" asp-controller="AccountManager" asp-action="Login">
        <div asp-asp-validation-summary="Model">
            <div class="col my-3">
                <label class="px-0" for="LoginEmail">Email</label>
                <input id="LoginEmail" asp-for="Email" class="form-control" type="email" />
            </div>
            <div class="col my-3">
                <label class="px-0" for=" LoginPassword">Password</label>
                <input id="LoginPassword" asp-for="Password" class="form-control" type="password" />
            </div>
            <div class="col my-3 form-check">
                <input id="LoginRememberMe" asp-for="RememberMe" class="form-check-input" type="checkbox" />
                <label for="LoginRememberMe" class="form-check-label d-inline">Запомнить</label>
            </div>
            <div class="col my-3">
                <input class="btn btn-primary" type="submit" value="Войти" />
            </div>
        </div>
    </form>
      
    <div class="container-sm">
        <p>Еще нет аккаунта? <a class="link-primary" asp-area="" asp-controller="Registration" asp-action="Registration">Зарегестрируйтесь</a></p>
    </div>
</div>
