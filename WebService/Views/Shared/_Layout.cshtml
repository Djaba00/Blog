@using Blog.BLL.Interfaces;

@inject ISignInService SignInService;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Blog.WebClient</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Blog.WebClient.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-light border-bottom">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Personal Blog</a>
                <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#header-menu-collapse" aria-controls="header-menu-collapse" aria-expanded="false">
                    <span class="visually-hidden">Навигация</span>
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between" id="header-menu-collapse">
                    <ul class="navbar-nav navbar-left">
                        <li class="nav-item">
                            <div class="dropdown">
                                <button class="btn" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Теги
                                </button>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="Tag" asp-action="Add">Создать тег</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="Tag" asp-action="Tags">Список тегов</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="dropdown">
                                <button class="btn" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Пользователи
                                </button>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="AccountManager" asp-action="Edit">Редактировать профиль</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="AccountManager" asp-action="Accounts">Список пользователей</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="dropdown">
                                <button class="btn" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Роли
                                </button>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="AccountRole" asp-action="Add">Создать роль</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="AccountRole" asp-action="Roles">Список ролей</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                    </ul>

                    @if(User.Identity.IsAuthenticated)
                    {
                        <ul class="nav navbar-nav navbar-right">
                            <li class="nav-item">
                                <form class="nav-link text-dark" asp-area="" asp-controller="AccountManager" asp-action="Logout" method="post">
                                    <button class="btn" type="submit">Выход</button>
                                </form>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <ul class="nav navbar-nav navbar-right">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="AccountManager" asp-action="Login">Вход</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="AccountManager" asp-action="Registration">Регистрация</a>
                            </li>
                        </ul>
                    }
                    
                </div>
            </div>
        </nav>
    </header>
    <div class="container ">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer bottom-0 text-muted">
    <div class="container">
        &copy; 2023 - Разработка персонального блога
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>

