@using Blog.WebService.ViewModels.AccountRole

@model EditAccountRoleViewModel;

@{
    ViewData["Title"] = "NewTag";
}

<div class="container form-container px-0">
    <div>
        <h2>Редактирование роли</h2>
        <hr />
    </div>
    <form method="post" asp-controller="AccountRole" asp-action="EditRole">
        <div asp-asp-validation-summary="Model">
            <input type="hidden" asp-for="Id" value="@Model.Id" />
            <div class="col my-3">
                <label class="px-0" for="EditRoleName">Название</label>
                <input id="EditRoleName" asp-for="Name" class="form-control" type="text" />
            </div>
            <div class="col my-3">
                <label class="px-0" for="EditRoleDescription">Название</label>
                <textarea id="EditRoleDescription" asp-for="Description" class="form-control" type="text" ></textarea>
            </div>
            <div class="col my-3">
                <input class="btn btn-primary" type="submit" value="Сохранить" />
            </div>
        </div>
    </form>

    <div class="container-sm">
        <a class="link-primary" asp-area="" asp-controller="AccountRole" asp-action="Roles">Перейти к списку всех ролей</a>
    </div>
</div>