@model Blog.WebService.ViewModels.AccountRole.CreateAccountRoleViewModel;

@{
    ViewData["Title"] = "AddRole";
}

<div class="container form-container px-0">
    <div>
        <h2>Добавление роли</h2>
        <hr />
    </div>
    <form method="post" asp-controller="AccountRole" asp-action="AddRole">
        <div asp-asp-validation-summary="Model">
            <div class="col my-3">
                <label class="px-0" for="NewRoleName">Название</label>
                <input id="NewRoleName" asp-for="Name" class="form-control" type="text" />
            </div>

            <div class="col my-3">
                <label class="px-0" for="NewRoleDescription">Описание роли</label>
                <textarea id="NewRoleDescription" asp-for="Description" class="form-control" type="text"></textarea>
            </div>

            <div class="col my-3">
                <input class="btn btn-primary" type="submit" value="Добавить" />
            </div>
        </div>
    </form>

    <div class="container-sm">
        <a class="link-primary" asp-area="" asp-controller="AccountRole" asp-action="Roles">Перейти к списку всех ролей</a>
    </div>
</div>