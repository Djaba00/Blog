@model Blog.WebService.VIewModels.Account.RegistrationViewModel; 

@{
    ViewData["Title"] = "Registration";
}

<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>

<div class="container form-container px-0">
    <div>
        <h2>Регистрация пользователя</h2>
        <hr />
    </div>
    <form method="post" asp-controller="Registration" asp-action="Registration">
        <div asp-asp-validation-summary="Model">
            <div class="col my-3">
                <label class="px-0" for="RegName">Имя</label>
                <input id="RegName" asp-for="FirstName" class="form-control" type="text" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="col my-3">
                <label class="px-0" for="RegLastName">Фамилия</label>
                <input id="RegLastName" asp-for="LastName" class="form-control" type="text" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="col my-3">
                <label class="px-0" for="RegMiddleName">Отчество</label>
                <input id="RegMiddleName" asp-for="MiddleName" class="form-control" type="text" />
            </div>
            <div class="col my-3">
                <label class="px-0" for="RegEmail">Email</label>
                <input id="RegEmail" asp-for="Email" class="form-control" type="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="col my-3">
                <label class="px-0" for="RegPassword">Пароль</label>
                <input id="RegPassword" asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="col my-3">
                <label class="px-0" for="RegPassword">Подтверждение пароля</label>
                <input id="RegPassword" asp-for="PasswordConfirm" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="col my-3">
                <input class="btn btn-primary" type="submit" value="Регистрация" />
            </div>
        </div>
    </form>
</div>