@model Blog.WebService.VIewModels.Tag.CreateTagViewModel

@{
    ViewData["Title"] = "NewTag";
}

<div class="container form-container px-0">
    <div>
        <h2>Добавление тега</h2>
        <hr />
    </div>
    <form method="post" asp-controller="Tag" asp-action="NewTag">
        <div asp-asp-validation-summary="Model">
            <div class="col my-3">
                <label class="px-0" for="NewTagName">Название</label>
                <input id="NewTagName" asp-for="Name" class="form-control" type="text" />
            </div>
            <div class="col my-3">
                <input class="btn btn-primary" type="submit" value="Добавить" />
            </div>
        </div>
    </form>

    <div class="container-sm">
        <a class="link-primary" asp-area="" asp-controller="Tag" asp-action="Tags">Перейти к списку всех тегов</a>
    </div>
</div>
