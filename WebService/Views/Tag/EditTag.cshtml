@using Blog.WebService.ViewModels.Tag

@model EditTagViewModel;

@{
    ViewData["Title"] = "EditTag";
}

<div class="container form-container px-0">
    <div>
        <h2>Редактирование тега</h2>
        <hr />
    </div>
    <form method="post" asp-controller="Tag" asp-action="EditTag">
        <div asp-asp-validation-summary="Model">
            <input type="hidden" asp-for="Id" value="@Model.Id" />
            <div class="col my-3">
                <label class="px-0" for="EditTagName">Название</label>
                <input id="EditTagName" asp-for="Name" class="form-control" type="text" />
            </div>
            <div class="col my-3">
                <input class="btn btn-primary" type="submit" value="Сохранить" />
            </div>
        </div>
    </form>

    <div class="container-sm">
        <a class="link-primary" asp-area="" asp-controller="Tag" asp-action="Tags">Перейти к списку всех тегов</a>
    </div>
</div>